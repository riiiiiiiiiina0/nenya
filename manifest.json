{
  "manifest_version": 3,
  "name": "Nenya",
  "version": "0.19.0",
  "description": "",
  "icons": {
    "16": "assets/icons/icon-16x16.png",
    "32": "assets/icons/icon-32x32.png",
    "48": "assets/icons/icon-48x48.png",
    "128": "assets/icons/icon-128x128.png"
  },
  "action": {
    "default_title": "Nenya",
    "default_icon": {
      "16": "assets/icons/icon-16x16.png",
      "32": "assets/icons/icon-32x32.png",
      "48": "assets/icons/icon-48x48.png"
    },
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "tabGroups",
    "notifications",
    "contextMenus",
    "alarms",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "declarativeNetRequest",
    "webNavigation"
  ],
  "externally_connectable": {
    "matches": [
      "https://ohauth.vercel.app/*"
    ]
  },
  "host_permissions": [
    "https://api.raindrop.io/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/split.html",
        "src/split/*",
        "src/libs/*",
        "src/contentScript/epicker-ui.html",
        "src/contentScript/epicker-ui.js",
        "src/contentScript/tab-switcher.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/contentScript/bright-mode.js",
        "src/contentScript/block-elements.js",
        "src/contentScript/custom-js-css.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/split/iframe-monitor.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/contentScript/custom-title.js",
        "src/contentScript/video-controller.js",
        "src/contentScript/highlight-text.js",
        "src/contentScript/tab-switcher.js"
      ],
      "css": [
        "src/contentScript/video-controller.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "description": "Open popup"
    },
    "bookmarks-pull-raindrop": {
      "description": "💧 Pull from Raindrop"
    },
    "bookmarks-save-to-unsorted": {
      "description": "💧 Save to Unsorted"
    },
    "bookmarks-save-project": {
      "description": "💧 Save as project"
    },
    "bookmarks-rename-tab": {
      "description": "💧 Rename current tab"
    },
    "copy-title-url": {
      "description": "📋 Copy Title\\nURL"
    },
    "copy-title-dash-url": {
      "description": "📋 Copy Title - URL"
    },
    "copy-markdown-link": {
      "description": "📋 Copy [Title](URL)"
    },
    "copy-screenshot": {
      "description": "📋 Copy Screenshot"
    },
    "pip-quit": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "🎥 Quit PiP"
    },
    "tabs-activate-left-tab": {
      "description": "🗂️ Activate left tab"
    },
    "tabs-activate-right-tab": {
      "description": "🗂️ Activate right tab"
    },
    "split-screen-toggle": {
      "description": "🖥️ Toggle split screen"
    },
    "block-element-picker": {
      "description": "🎯 Element Picker"
    },
    "tab-switcher": {
      "suggested_key": {
        "default": "Alt+Shift+Tab"
      },
      "description": "🔄 Tab Switcher"
    },
    "llm-chat-with-llm": {
      "description": "🤖 Chat with LLM"
    }
  }
}
